<!--index.wxml-->
  <view>
    <button>对话指南</button>
  </view>  
  <view>
    <button>分享</button>
  </view>

  <scroll-view class="scroll" scroll-y="true" scroll-top="{{scrollTop}}">
  <div wx:for="{{words}}">
    <div wx:if="{{item.sender == 'ai'}}" class="leftd">
      <div class="leftd" style="padding-top: 12px; margin-right: 2px"><image style="width: 36px; height: 36px;" src="../../1.jpg" /></div>
      <div class="speech left"><rich-text nodes="{{item.title+'<br>'+item.content+'<br>'+item.url}}"></rich-text></div>
    </div>
    <div wx:if="{{item.sender == 'user'}}" class="rightd">
      <div class="rightd" style="padding-top: 12px; margin-left: 2px"><image
      src="{{userInfo.avatarUrl}}" style="width: 36px; height: 36px;"></image></div>
      <div class="speech right"><rich-text nodes="{{item.title}}"></rich-text></div>
    </div>
  </div>
  </scroll-view>

  <div class="footer">
    <div style='float:left;border: 1px solid;width:76%;'>
      <input rows="1" style='border-radius: 5px; width: 85%;' value='{{word}}'  bindinput="userInput">{{input}}</input>
    </div>
    <div style="float:right;width:20%; margin-top: -8px; vertical-aligh: center;">
      <button size="mini" bindtap="bindViewTap">发送</button>
    </div>
  </div>
